@model ASM2.ViewModels.CourseCategoryViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create a new Course</h2>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm("Create", "Courses", FormMethod.Post))
{
@Html.AntiForgeryToken()
<div class="form-group">
	@Html.LabelFor(p => p.Course.Name)
	@Html.TextBoxFor(p => p.Course.Name, new { @class = "form-control" })
	@Html.ValidationMessageFor(p => p.Course.Name, "", new { @class = "text-danger" })
</div>
<div class="form-group">
	@Html.LabelFor(p => p.Course.Description)
	@Html.TextBoxFor(p => p.Course.Description, new { @class = "form-control" })
	@Html.ValidationMessageFor(p => p.Course.Description, "", new { @class = "text-danger" })
</div>
<button type="submit" class="btn btn-primary">Create</button>
}