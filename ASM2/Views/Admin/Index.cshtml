@model IEnumerable<ASM2.ViewModels.UserRoleViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-striped">
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Email</th>
		<th>Role</th>
		<th>Delete</th>
		<th>Edit</th>
		<th>ChangePass</th>
	</tr>
	@foreach (var users in Model)
	{
		<tr>
			<td>@users.UserId</td>
			<td>@users.Username</td>
			<td>@users.Email</td>
			<td>@users.Role</td>
			<td>@Html.ActionLink("Delete this user", "Delete", new { id = users.UserId })</td>
			<td>@Html.ActionLink("Edit this user", "Edit", new { id = users.UserId })</td>
			<td>@Html.ActionLink("Change this pass", "ChangePassword", new { id = users.UserId })</td>
		</tr>
	}
</table>